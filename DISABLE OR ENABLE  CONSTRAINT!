TO DISABLE OR ENABLE  CONSTRAINT!!!!

CREATE TABLE HR.EMPL_CONSTRAINTS_PLSQL_1
(EMPID NUMBER PRIMARY KEY,
EMP_NAME VARCHAR2(15) NOT NULL,
DEPTID NUMBER UNIQUE);

(TO WRITE FOR EACH ROW)

ALTER TABLE HR.EMPL_CONSTRAINTS_PLSQL_1 DISABLE CONSTRAINT SYS_C007030;
ALTER TABLE HR.EMPL_CONSTRAINTS_PLSQL_1 DISABLE CONSTRAINT SYS_C007031;
ALTER TABLE HR.EMPL_CONSTRAINTS_PLSQL_1 DISABLE CONSTRAINT SYS_C007032;

ALTER TABLE HR.EMPL_CONSTRAINTS_PLSQL_1 ENABLE CONSTRAINT SYS_C007030;
ALTER TABLE HR.EMPL_CONSTRAINTS_PLSQL_1 ENABLE CONSTRAINT SYS_C007031;
ALTER TABLE HR.EMPL_CONSTRAINTS_PLSQL_1 ENABLE CONSTRAINT SYS_C007032;

SELECT CONSTRAINT_NAME
FROM ALL_CONSTRAINTS
WHERE TABLE_NAME='EMPL_CONSTRAINTS_PLSQL_1'

dyNAmiC sQL!!!!(TO WRITE FOR THE WHOLE ROWS DISABLE OR ENABLE,IF YOU HAVE 1000 ROWS)

DECLARE
V_CONSTRAINT_NAME VARCHAR2(30);
CURSOR C IS SELECT CONSTRAINT_NAME FROM ALL_CONSTRAINTS
WHERE TABLE_NAME='EMPL_CONSTRAINTS_PLSQL_1';
SQL_STMT VARCHAR2(100);
BEGIN
OPEN C;
LOOP
FETCH C INTO V_CONSTRAINT_NAME;
EXIT WHEN C%NOTFOUND;
SQL_STMT:='ALTER TABLE HR.EMPL_CONSTRAINTS_PLSQL_1 DISABLE CONSTRAINT '||V_CONSTRAINT_NAME;
EXECUTE IMMEDIATE
SQL_STMT;
END LOOP;
CLOSE C;
END;
/

TO SAVE IN THE DB!!!!

CREATE OR REPLACE PROCEDURE HR.DISABLE_CONS
AS BEGIN
DECLARE
V_CONSTRAINT_NAME VARCHAR2(30);
CURSOR C IS SELECT CONSTRAINT_NAME FROM ALL_CONSTRAINTS
WHERE TABLE_NAME='EMPL_CONSTRAINTS_PLSQL_1';
SQL_STMT VARCHAR2(100);
BEGIN
OPEN C;
LOOP
FETCH C INTO V_CONSTRAINT_NAME;
EXIT WHEN C%NOTFOUND;
SQL_STMT:='ALTER TABLE HR.EMPL_CONSTRAINTS_PLSQL_1 DISABLE CONSTRAINT '||V_CONSTRAINT_NAME;
EXECUTE IMMEDIATE
SQL_STMT;
END LOOP;
CLOSE C;
END;
END;
/

EXEC HR.DISABLE_CONS;

TO STORE ANY TABLE THAT WE WANT!!!

CREATE OR REPLACE PROCEDURE HR.DISABLE_ENABLE_CONS
(PAR_SCHEMA_NAME VARCHAR2,PAR_TABLE_NAME VARCHAR2,PAR_CONS_ACTION VARCHAR2)
AS BEGIN
DECLARE
V_CONSTRAINT_NAME VARCHAR2(30);
CURSOR C IS SELECT CONSTRAINT_NAME FROM ALL_CONSTRAINTS
WHERE TABLE_NAME='PAR_TABLE_NAME';
SQL_STMT VARCHAR2(100);
BEGIN
OPEN C;
LOOP
FETCH C INTO V_CONSTRAINT_NAME;
EXIT WHEN C%NOTFOUND;
SQL_STMT:='ALTER TABLE '||PAR_SCHEMA_NAME||'.'||PAR_TABLE_NAME||' '|| PAR_CONS_ACTION ||' CONSTRAINT '||V_CONSTRAINT_NAME;
EXECUTE IMMEDIATE
SQL_STMT;
END LOOP;
CLOSE C;
END;
END;
/

EXEC HR.DISABLE_ENABLE_CONS('HR','EMPL_CONSTRAINTS_PLSQL_1','DISABLE');