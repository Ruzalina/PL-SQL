DECLARE 
A NUMBER:=10;
Begin
Dbms_output.put_line(‘The value of a is: ‘||A);
End;
/

DECLARE
A NUMBER:=20;
BEGIN
A NUMBER:=50;
DBMS_OUTPUT.PUT_LINE(‘THE VALUE OF A IS: ‘||A);
END;
/

DECLARE
A CONSTANT NUMBER:=40;
BEGIN
DBMS_OUTPUT.PUT_LINE(‘THE VALUE OF A IS: ‘||A);
END;
/

DECLARE
A NUMBER:=60;
B NUMBER:=30;
C NUMBER;
BEGIN
C:=A+B;
DBMS_OUTPUT.PUT_LINE(‘THE VALUE OF C IS: ‘||C);
END;
/

———IF THEN
DECLARE
A NUMBER:=50;
B NUMBER:=600;
BEGIN
IF(A>B)THEN
DBMS_OUTPUT.PUT_LINE(‘A IS GREATER THAN B’);
END IF;
END;
/

——IF THEN ELSE
DECLARE 
A NUMBER:=400;
B NUMBER:=70;
BEGIN
IF(A>B)THEN
DBMS_OUTPUT.PUT_LINE(‘A IS GRETER THAN B’);
ELSE 
DBMS_OUTPUT.PUT_LINE(‘B IS GREATER THAN B’);
END IF;
END;
/

——IF THEN ELSIF
DECLARE 
A NUMBER:=40;
B NUMBER:=5;
BEGIN
IF(A>B)THEN
DBMS_OUTPUT.PUT_LINE(‘A IS GREATER THAN B’);
ELSIF(B>A)THEN
DBMS_OUTPUT.PUT_LINE(‘B IS GREATER THAN A’);
ELSE
DBMS_OUTPUT.PUT_LINE(‘A IS EQUAL TO B’);
END IF;
END;
/


——BASIC LOOP
DECLARE
X NUMBER:=1;
BEGIN
LOOP
DBMS_OUTPUT.PUT_LINE(X);
X:=X+1;
IF X>10 THEN
EXIT;
END IF;
END LOOP;
END;
/

———WHILE LOOP(YOU CAN DO ANYTHING)
DECLARE
X NUMBER:=40;
BEGIN 
WHILE X<=10
LOOP
DBMS_OUTPUT.PUT_LINE(X);
X:=X+2;
END IF;
END LOOP;
END;
/

_____FOR LOOP(YOU CAN NOT INCREMENT BY 2,3)
BEGIN FOR X IN 1..10          
LOOP
DBMS_OUTPUT.PUT_LINE(X);
END LOOP;
END;
/

