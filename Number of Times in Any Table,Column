Number of Times in Any Table,Column

SELECT COLUMN_NAME
FROM ALL_TAB_COLUMNS
WHERE TABLE_NAME='EMPLOYEES' AND DATA_TYPE='NUMBER';

DECLARE
V_COLUMN_NAME VARCHAR2(30);
CURSOR C IS SELECT COLUMN_NAME
FROM ALL_TAB_COLUMNS
WHERE TABLE_NAME='EMPLOYEES' AND DATA_TYPE='NUMBER';
SQL_STMT VARCHAR2(100);
SQL_OUT VARCHAR2(100);
BEGIN
OPEN C;
LOOP
FETCH C INTO V_COLUMN_NAME;
EXIT WHEN C%NOTFOUND;
SQL_STMT:='SELECT COUNT(*) FROM HR.EMPLOYEES WHERE '||V_COLUMN_NAME||' ='||100;
EXECUTE IMMEDIATE
SQL_STMT INTO SQL_OUT;
IF SQL_OUT>0 THEN
DBMS_OUTPUT.PUT_LINE('THE NUMBER OF TIMES 100 OCCURS IN '||V_COLUMN_NAME||' IS '||SQL_OUT||' TIMES ');
END IF;
END LOOP;
END;
/

SELECT COUNT(*)
FROM HR.EMPLOYEES
WHERE EMPLOYEE_ID=100;


!!!!THIS IS FOR GOOD CODING
 CHECKS ANY TABLE,ANY COLUMN
 
CREATE OR REPLACE PROCEDURE HR.CHECK_VAL
(PAR_SCHEMA_NAME VARCHAR2,PAR_TABLE_NAME VARCHAR2,PAR_INPUT_VAL INTEGER)
AS BEGIN
DECLARE
V_COLUMN_NAME VARCHAR2(30);
CURSOR C IS SELECT COLUMN_NAME
FROM ALL_TAB_COLUMNS
WHERE TABLE_NAME=PAR_TABLE_NAME AND DATA_TYPE='NUMBER';
SQL_STMT VARCHAR2(100);
SQL_OUT VARCHAR2(100);
BEGIN
OPEN C;
LOOP
FETCH C INTO V_COLUMN_NAME;
EXIT WHEN C%NOTFOUND;
SQL_STMT:='SELECT COUNT(*) FROM '||PAR_SCHEMA_NAME||'.'||PAR_TABLE_NAME||' WHERE '||V_COLUMN_NAME||' ='||PAR_INPUT_VAL;
EXECUTE IMMEDIATE
SQL_STMT INTO SQL_OUT;
IF SQL_OUT>0 THEN
DBMS_OUTPUT.PUT_LINE('THE NUMBER OF TIMES '|| PAR_INPUT_VAL ||' OCCURS IN '||V_COLUMN_NAME||' IS '||SQL_OUT||' TIMES ');
END IF;
END LOOP;
END;
END;
/

EXEC CHECK_VAL('HR','EMPLOYEES',100);