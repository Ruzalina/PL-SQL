——-ARRAYS

DECLARE
TYPE NAMES_ARRAY IS VARRAY(5) OF VARCHAR2(10);
TYPE GRADES_ARRAY IS VARRAY(5) OF INTEGER;
NAMES NAMES_ARRAY;
GRADES GRADES_ARRAY;
BEGIN
NAMES:=NAMES_ARRAY(‘ABDUL’,’ADIL’);
GRADES:=GRADES_ARRAY(99,98);
DBMS_OUTPUT.PUT_LINE(NAMES(1)||’,’||GRADES(2));
END;
/

Чтобы не писать каждого:
DECLARE
TYPE NAMES_ARRAY IS VARRAY(5) OF VARCHAR2(10);
TYPE GRADES_ARRAT IS VARRAY(5) OF INTEGER;
NAMES NAMES_ARRAY;
GRADES GRADES_ARRAY;
X NUMBER:=1;
TOTAL NUMBER;
BEGIN
NAMES:=NAMES_ARRAY(‘ABDUL’,’ADIL’,’KEMRAN’);
GRADES:=GRADES_ARRAY(87,86,85);
TOTAL:=NAMES.COUNT;
LOOP
DBMS_OUTPUT.PUT_LINE(NAMES(X)||’,’||GRADES(X));
X:=X+1;
IF X>TOTAL THEN
EXIT;
END IF;
END LOOP;
END;
/