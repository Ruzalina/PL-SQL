TRIGGERS

CREATE TABLE HR.EMP_TRIGGER
(EMPID NUMBER,
EMP_NAME VARCHAR2(15),
DEPTID NUMBER,
SALARY NUMBER);

INSERT INTO HR.EMP_TRIGGER VALUES(1,’ABDUL’,10,1000);
INSERT INTO HR.EMP_TRIGGER VALUES(2,’KEMRAN’,40,4000);
COMMIT;

CREATE OR REPLACE TRIGGER TR_EMPL_SALARY
AFTER UPDATE OF SALARY 
ON HR.EMP_TRIGGER
FOR EACH ROW
BEGIN
DBMS_OUTPUT.PUT_LINE(‘SALARY GOT UPDATED’);
END;
/

UPDATE HR.EMP_TRIGGER
SET SALARY=6000;
WHERE EMPID=1;


CREATE OR REPLACE TRIGGER TR_EMPL_SAL
AFTER UPDATE OF SALARY
ON HR.EMP_TRIGGER
FOR EACH ROW
BEGIN
DBMS_OUTPUT.PUT_LINE(‘SALARY GOT UPDATED. THE NEW SALARY IS  ‘||:NEW SALARY||’AND THE OLD SALARY WAS  ‘||:OLD SALARY||’.  IT WAS UPDATED AT’||SYSDATE|| ’.  IT WAS UPDATED BY ’||USER);
END;
/